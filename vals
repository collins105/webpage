<body>
    <div class="container">
        <h1>Will You Be My Valentine? <span class="heart">❤️</span></h1>
        <div class="buttons">
            <button class="yes" onclick="showMessage()">Yes!</button>
            <button class="no" onclick="moveButton(this)">No</button>
        </div>
        <p id="message" class="hidden">Yay! Can't wait to celebrate together! ❤️</p>
    </div>
    
    <script>
        function showMessage() {
            document.getElementById("message").classList.remove("hidden");
        }
        function moveButton(button) {
            let x = Math.random() * (window.innerWidth - 200);
            let y = Math.random() * (window.innerHeight - 100);
            button.style.position = "absolute";
            button.style.left = `${x}px`;
            button.style.top = `${y}px`;
        }
    </script>
</body>
